@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers


@{
    ViewBag.Title = "Product";
}

@helper DisplayPriceRazor(decimal price) { 
    if (price == 0)
    {
        <span>Free!!!</span>
    }
    else
    {
        <span>@price</span>
    }
}

@helper DisplayDateRazor(DateTime? createDate) { 
    if(createDate==null)
    {
        <span>No time</span>
    }
    else
    {
        <span>@createDate</span>
    }
}

<h2>Product</h2>

<ul>
    @foreach (var product in Model)
    {
        <li>
            <span>@product.Description:</span>
            @DisplayPriceRazor(product.Price)
            <div>
                @CustomHelper.DisplayPriceStatic(product.Price)
            </div>
            <div>
                @Html.DisplayPriceExtension(product.Price)
            </div>

            @*<span>@product.CreateDate</span>*@
            @DisplayDateRazor(product.CreateDate)
            <div>
                @CustomHelper.DisplayDateOrNull(product.CreateDate)
            </div>
            <div>
                @Html.DisplayDateOrNullExtension(product.CreateDate)
            </div>

        </li>
    }

</ul>

